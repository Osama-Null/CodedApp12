@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

@if (!Model.Any())
{
	<br>
	<!-- If the model is empty, show a message -->
	<div class="alert alert-warning">
		<h4 class="alert-heading">Table is Empty</h4>
		<p>No departments found in the database.</p>
		<p>You can add a new department @*or restore*@by clicking the button below:</p>
		<!-- Add button -->
		<a asp-action="Add" asp-controller="Departments" class="btn btn-success">+ Add Department</a>
		@* <a asp-action="SoftDeletedDepartments" asp-controller="Departments" class="btn btn-success">↻ Restore Department</a> *@
	</div>
}
else
{
	<h1>Departments</h1>
	<div class="text-end">
		<a asp-action="Add" asp-controller="Departments" class="btn btn-success">+ Add Department</a>
	</div>

	<table class="table table-responsive">
		<tr>
			<td>@Html.DisplayNameFor(model => model.Id)</td>
			<td>@Html.DisplayNameFor(model => model.Name)</td>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td class="text-end">
					<a asp-action="Details" asp-controller="Departments" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
					<a asp-action="Edit" asp-controller="Departments" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
					<a asp-action="Delete" asp-controller="Departments" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</table>
}